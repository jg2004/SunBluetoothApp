<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp"
    >


    <EditText
        android:id="@+id/lpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:hint="@string/lp_name_hint"
        android:inputType="textPersonName"
        />


    <EditText
        android:id="@+id/lpContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="@string/lp_content_hint"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"

        >

        <ImageButton
            android:id="@+id/saveLPButton"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_rounded_button"
            android:contentDescription="@string/save_lp"
            app:srcCompat="@drawable/ic_action_save"/>


        <ImageButton
            android:id="@+id/clearLPButton"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/blue_rounded_button"
            android:contentDescription="@string/clear_fields"
            app:srcCompat="@drawable/ic_action_clear"/>

        <ImageButton
            android:id="@+id/loadSampleButton"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@drawable/blue_rounded_button"
            android:contentDescription="@string/load_sample_LP"
            app:srcCompat="@drawable/ic_action_help_white"/>
    </LinearLayout>


</LinearLayout>