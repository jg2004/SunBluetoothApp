            <LinearLayout
                android:id="@+id/segment8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/segment7"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSet8Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:text="SET8: "
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/editTextSet8"
                    android:layout_width="@dimen/edit_text_tc01_set"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="numberDecimal|numberSigned"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/textViewWait8Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:text="WAIT8: "
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/editTextWait8"
                    android:layout_width="@dimen/edit_text_tc01_wait"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal|numberSigned"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/segment9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/segment8"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSet9Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:text="SET9: "
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/editTextSet9"
                    android:layout_width="@dimen/edit_text_tc01_set"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:inputType="numberDecimal|numberSigned"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/textViewWait9Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:text="WAIT9: "
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/editTextWait9"
                    android:layout_width="@dimen/edit_text_tc01_wait"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal|numberSigned"
                    android:textSize="16sp"
                    />
